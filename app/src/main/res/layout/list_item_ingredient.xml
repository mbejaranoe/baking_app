<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="70dp"
    style="@style/smallCardViews"
    android:id="@+id/ingredient_card_view">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ingredient_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical|start"
            android:layout_margin="@dimen/margin_normal"
            android:padding="@dimen/padding_normal"
            style="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/colorPrimary"
            tools:text="Necesito poner aquí un nombre lo bastante largo como para poder trabajar con él y que por lo menos ocupe dos líneas, tampoco más"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="0"
            android:layout_gravity="center_vertical|end"
            android:layout_margin="@dimen/margin_normal"
            android:padding="@dimen/padding_normal">

            <TextView
                android:id="@+id/quantity_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/colorPrimary"
                tools:text="34"/>

            <TextView
                android:id="@+id/measure_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/colorPrimary"
                tools:text="CUP"/>

        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>