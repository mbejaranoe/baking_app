<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:minWidth="@dimen/accessibility_minWidth"
    android:minHeight="@dimen/accessibility_minHeight"
    style="@style/smallCardViews"
    android:id="@+id/ingredient_card_view"
    android:layout_marginBottom="@dimen/accessibility_touch_spacing">

    <ImageView
        android:id="@+id/step_thumbnail_image_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="false"
        android:cropToPadding="false"
        android:scaleType="centerCrop"
        tools:src="@drawable/recipestepplaceholder_blue"
        />

    <TextView
        android:id="@+id/step_short_description_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|start"
        android:textColor="@android:color/white"
        android:layout_margin="@dimen/margin_normal"
        android:padding="@dimen/padding_normal"
        tools:text="Recipe introduction"
        />

</android.support.v7.widget.CardView>